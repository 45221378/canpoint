/* pages/sortWrongList/sortWrongList.wxss */
.sortWrongList{
  height: 100vh;
  background: #f9f9f9;
  padding: 20rpx 0;  
}
.sortWrongList .noData image{
  width: 370rpx;
  height: 280rpx;
  margin: 100rpx auto 20rpx;
  display: block;
}
.sortWrongList .noData .say{
  font-size: 30rpx;
  color: #999;
}
.sortWrongList .noData .say text{
  display: block;
  line-height: 50rpx;
  text-align: center;
}
.sortWrongList .title {
  text-align: left;
  font-size: 28rpx;
  display: block;
  padding: 20rpx 0 20rpx 0;
  background: #fff;
  padding-left: 40rpx;
}
.sortWrongList .title .section-name{
  width: 350rpx;
  display: inline-block;
  vertical-align: middle;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.sortWrongList .title .num{
  margin-left: 20rpx;
  font-size: 28rpx;
  vertical-align: middle;
}
.sortWrongList text{
  font-size: 28rpx;
  text-align: justify;
}
.sortWrongList .title .remark{
  height: 44rpx;
  background: #fff;
  color: #2896fe;
  font-size: 26rpx;
  text-align: center;
  line-height: 40rpx;
  border-radius: 26rpx;
  margin-right: 20rpx;
  border: 2rpx solid #2896fe;
  width: 200rpx;
  float: right;
}
.sortWrongList .content {
  margin-top: 20rpx;
  background: #fff;
  padding: 30rpx;
}
.sortWrongList .content .index{
  /* display: flex;
  justify-content: flex-start; */
}
.sortWrongList .content .index .i{
  padding: 0 20rpx;
  height: 44rpx;
  background: #fff;
  color: #2896fe;
  font-size: 26rpx;
  text-align: center;
  line-height: 40rpx;
  border-radius: 26rpx;
  margin-right: 20rpx;
  border: 2rpx solid #2896fe;
  display: block;
  float: left;
  margin-bottom: 20rpx;

}
.sortWrongList .content .index .checked{
  background: #2896fe;
  color: #fff;
}
.sortWrongList .video {
  font-size: 30rpx;
  float: left;
  margin: 20rpx 20rpx 0 0;
}
.sortWrongList .seeVideo{
  height: 240rpx;
  width: 440rpx;
  float: left;
  margin: 20rpx 20rpx 0 0;
}
.sortWrongList .myanswer{
  font-size: 28rpx;
  /* float: left; */
  margin: 20rpx 20rpx 20rpx 0;
  vertical-align: middle;
}
.sortWrongList .myanswer-check{

}
.sortWrongList .mythink{
  font-size: 30rpx;
  float: left;
  margin: 20rpx 20rpx 20rpx 0;
}

.sortWrongList .error{
  color: #fe2841;
  border: 2rpx solid #fe2841;
  min-width: 72rpx;
  padding: 0 14rpx;
  height: 44rpx;
  font-size: 24rpx;
  border-radius: 26rpx;
  text-align: center;
  line-height: 40rpx;
  /* float: left; */
  margin: 20rpx 0;
  display: inline-block;
}
.sortWrongList  .noerror{
  color: #2896fe;
  border: 2rpx solid #2896fe;
  width: 72rpx;
  height: 44rpx;
  font-size: 24rpx;
  border-radius: 26rpx;
  text-align: center;
  line-height: 40rpx;
  /* float: left; */
  margin: 20rpx 0;
  display: inline-block;
}
.sortWrongList  .noerror image{
  width: 30rpx;
  height: 32rpx;
  vertical-align: middle;
}
.sortWrongList .errorright{
  font-size: 24rpx;
  line-height: 40rpx;
  margin: 20rpx 0;
  display: inline-block;
}
.sortWrongList .answerdetail{
  font-size: 30rpx;
  float: left;
  margin: 0 20rpx 20rpx 0;
}
.sortWrongList .changeAns {
  display: flex;
}
.sortWrongList .textarea{
  background: #f9f9f9;
  color: #000;
  font-size: 26rpx;
  border: 2rpx solid #eee;
  height: 200rpx;
  padding: 20rpx;
  flex: 1;
  border-radius: 12rpx;
  margin: 20rpx 0 0 0;
}
.black{
  color: #a0a0a0;
}
.sortWrongList  .sub{
  font-size: 30rpx;
  color: #2896fe;
  width: 80rpx;
  height: 200rpx;
  padding-left: 20rpx;
}
.sortWrongList .see{
  font-size: 30rpx;
  color: #2896fe;
  /* float: left; */
  margin: 20rpx 20rpx 0 0;

}

.sortWrongList .submit{
  width: 631rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0;
  font-size: 28rpx;
  color: #fff;
  border-radius: 36rpx;
  background-color: #2896fe;
  margin-top: 20rpx;
}